---
interface Props {
  title: string;
  text1: string;
  text2: string;
  text3: string;
  text4: string;
  text5: string;
}

const { title, text1, text2, text3, text4, text5 } = Astro.props;
---

<div class="card py-5 px-5">
  <h2 class="text-xl md:text-2xl xl:text-3xl text-white">
    <strong>{title}</strong>
  </h2>
  <p class="text-lg md:text-xl xl:text-2xl text-white/80 m-2">{text1}</p>
  <p class="text-lg md:text-xl xl:text-2xl text-white/80 m-2">{text2}</p>
  <p class="text-lg md:text-xl xl:text-2xl text-white/80 m-2">{text3}</p>
  <p class="text-lg md:text-xl xl:text-2xl text-white/80 m-2">{text4}</p>
  <p class="text-lg md:text-xl xl:text-2xl text-white/80 m-2">{text5}</p>
</div>

<style>
  .card {
    text-align: center;
    background-color: #0b1d5a;
    background-image: none;
    background-size: 400%;
    background-position: 100%;
    margin-top: 60px;
  }

  h2 {
    margin: 1px;
    padding-bottom: 10px;
    font-size: 2rem;
    color-scheme: white;
  }
</style>
