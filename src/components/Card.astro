---
interface Props {
  imagen: string;
  titulo: string;
  url: string;
}
const { imagen, titulo, url } = Astro.props;
---

<div class="flex flex-col gap-2 items-center">
  <h3 class="text-yellow-500 text-center text-lg">{titulo}</h3>
  <figure class="min-w-56 w-4/12">
    <img
      src={imagen}
      alt="imagen de curso"
      class="max-w-full object-cover mx-auto"
    />
  </figure>
  <a
    class="text-white/75 text-center bg-yellow-500 hover:bg-yellow-500/75 py-1 px-2 rounded-sm text-base"
    href={url}>Inscribirme</a
  >
</div>
